<h2>edit "<%=@task.description%>" task</h2>

<%= form_with model: @task, class: "edit-task-form" do |f|%>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.text_field :completed %>

  <%= f.submit "Edit Task", class: "task-form-button" %>
<% end %>
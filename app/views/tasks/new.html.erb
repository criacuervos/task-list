<h2>New Task Form</h2>

<%= form_with model: @task, class: "new-task-form" do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>
  
  <%= f.submit "Create Task", class: "task-form-button" %>

<% end %>